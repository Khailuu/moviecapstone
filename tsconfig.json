{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    //custom import
    "baseUrl": "./src",
    "paths": {
      "assets": ["assets"],
      "components": ["components"],
      "layouts": ["components/layouts"],
      "template": ["components/template"],
      "ui": ["components/ui"],
      "constant": ["constant"],
      "contexts": ["contexts"],
      "hooks": ["hooks"],
      "libs": ["libs"],
      "pages": ["pages"],
      "routers": ["routers"],
      "schemas": ["schemas"],
      "services": ["services"],
      "store": ["store"],
      "types": ["types"],
      "utils": ["utils"],
    }
  },
  "include": ["src", "src/components/ui/admin/films/.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
